<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/add_photo"
                android:id="@+id/imgUser"
                android:layout_gravity="center"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"/>


            <Button
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:id="@+id/btnselectimag"
                android:layout_gravity="center_horizontal"
                android:text="@string/SelectImageHomeScreen"
                android:backgroundTint="@color/dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Lets get your Basic Details."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@color/dark"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edtPlace"
                        android:hint="Enter Place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@color/dark"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:id="@+id/edtprice"
                        android:hint="Enter Price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@color/dark"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:id="@+id/edtnumber"
                        android:hint="Enter Mobile Number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@color/dark"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edtemail"
                        android:hint="Enter Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@color/dark"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edtCity"
                        android:hint="Enter City"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@color/dark"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edtdescription"
                        android:hint="Enter Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@color/dark"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edtrate"
                        android:hint="Enter Rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:endIconMode="password_toggle"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@color/dark"
                        android:imeOptions="actionDone"
                        android:inputType="textWebPassword"
                        android:id="@+id/edtPassword"
                        android:hint="Enter your password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <Button
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:id="@+id/BtnAdd"
                android:layout_gravity="center_horizontal"
                android:text="@string/AddHomeScreen"
                android:backgroundTint="@color/dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:id="@+id/Btnshow"
                android:layout_gravity="center_horizontal"
                android:text="@string/ShowHomeScreen"
                android:backgroundTint="@color/dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>